    <style>
        @@keyframes bellShake {
            0%

        {
            transform: rotate(0);
        }

        25% {
            transform: rotate(5deg);
        }

        50% {
            transform: rotate(-5deg);
        }

        75% {
            transform: rotate(5deg);
        }

        100% {
            transform: rotate(0);
        }

        }

        .bell-animate {
            animation: bellShake 1.2s infinite;
        }
    </style>

</head>

