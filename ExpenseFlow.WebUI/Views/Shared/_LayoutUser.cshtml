@using System.Text.Json

@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        ExpenseFlow  | Çalışan Paneli - @ViewData["Title"]
    </title>
    <link href="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/img/brand/favicon.png" rel="icon" type="image/png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/nucleo/css/nucleo.css" rel="stylesheet" />
    <link href="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/css/argon-dashboard.css?v=1.1.2" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="">
    <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand pt-0" href="/">
                <img src="~/img/ExpenseFlow.png" alt="ExpenseFlow" style="max-height: 60px; width: auto; class="navbar-brand-img" alt="ExpenseFlow Logo">
            </a>
            <ul class="nav align-items-center d-md-none">
            </ul>
            <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                <div class="navbar-collapse-header d-md-none">
                    <div class="row">
                        <div class="col-6 collapse-brand">
                            <a href="/">
                                <img src="~/img/ExpenseFlow.png">
                            </a>
                        </div>
                        <div class="col-6 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>

                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-controller="Employee" asp-action="Dashboard" class="nav-link active" >
                            <i class="ni ni-tv-2 text-primary"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Employee" asp-action="MyExpenses" class="nav-link" >
                            <i class="ni ni-bullet-list-67 text-red"></i> Masraflarım
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="NewAddExpense" asp-controller="Employee" class="nav-link">
                            <i class="ni ni-fat-add text-info"></i> 
                            <span class="nav-link-text">Yeni Masraf Ekle</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="main-content">
       @*  <li class="nav-item dropdown">
            @await Component.InvokeAsync("Notification")
            </li> 
       *@
      @*  profil sayfası için headeri devre dışı bıraktım *@
        @if (!(controller == "Employee" && action == "Profile"))
        {
            <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
                <div class="container-fluid">
                <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" href="/"></a>

                <ul class="navbar-nav align-items-center d-none d-md-flex">
                    <li class="nav-item dropdown">
                        <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="media align-items-center">
                                <span class="avatar avatar-sm rounded-circle">
                                    <img alt="Image placeholder" src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/img/theme/team-4-800x800.jpg">
                                </span>
                                <div class="media-body ml-2 d-none d-lg-block">
                                    <span class="mb-0 text-sm  font-weight-bold">@User.Identity.Name</span>
                                </div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                            <div class=" dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Hoşgeldiniz!</h6>
                            </div>
                           
                            <a asp-controller="Employee" asp-action="Profile" class="dropdown-item">
                                <i class="ni ni-single-02"></i>   Profilim
                            </a>
                           
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="ni ni-user-run"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        }

        @if (IsSectionDefined("HeaderCards"))
        {
            <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
                <div class="container-fluid">
                    <div class="header-body">
                        @RenderSection("HeaderCards", required: false)
                    </div>
                </div>
            </div>
        }

        @if (controller == "Employee" && action == "Profile")
        {
            <div class="container-fluid">
                @RenderBody()
            </div>
        }
        else
        {
            <div class="container-fluid mt--7">
                @RenderBody()
            </div>
        }

            <footer class="footer">
                <div class="row align-items-center justify-content-xl-between">
                    <div class="col-xl-6">
                        <div class="copyright text-center text-xl-left text-black text-muted">
                            &copy; @DateTime.Now.Year <a href="/" class="font-weight-bold ml-1" target="_blank">ExpenseFlow</a>
                        </div>
                    </div> 
                </div>
            </footer>
    </div>
    

    <script src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/chart.js/dist/Chart.min.js"></script>
    <script src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/plugins/chart.js/dist/Chart.extension.js"></script> *@
    <script src="~/template/user/argon-dashboard-master/argon-dashboard-master/assets/js/argon-dashboard.min.js?v=1.1.2"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/signalR.js"></script>

    <script src="~/js/notification.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/chart.js"></script>
    <script src="~/js/address.js"></script>
    <script src="~/js/modalProfile.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>