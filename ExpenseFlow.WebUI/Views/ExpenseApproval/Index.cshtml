@using ExpenseFlow.Entity
@model List<Expense>

@{
    ViewData["Title"] = "Masraf Onay Merkezi";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h3 class="mb-4">Bekleyen Masraf Talepleri</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Açıklama</th>
            <th>Tutar</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Amount ₺</td>
                <td>@item.Category?.Name</td>
                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                <td>
                    <button class="btn btn-info btn-sm"
                            data-toggle="modal"
                            data-target="#detailModal_@item.Id">
                        Detay
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    <div class="modal fade" id="detailModal_@item.Id" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Masraf Detayı</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <p><strong>Çalışan:</strong> @item.User?.FirstName @item.User?.LastName</p>
                    <p><strong>Kategori:</strong> @item.Category?.Name</p>
                    <p><strong>Açıklama:</strong> @item.Description</p>
                    <p><strong>Tutar:</strong> @item.Amount ₺</p>

                    <hr />

                    <strong>Fatura Görseli:</strong><br />

                    @if (!string.IsNullOrEmpty(item.ReceiptImage))
                    {
                        <img src="@item.ReceiptImage"
                             class="img-fluid rounded border mt-2"
                             style="max-height:300px;" />
                    }
                    else
                    {
                        <p class="text-muted mt-2">Fatura yüklenmemiş.</p>
                    }
                </div>

                <div class="modal-footer">
                    <form asp-action="Approve" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-success">Onayla</button>
                    </form>

                    <form asp-action="Reject" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-danger">Reddet</button>
                    </form>

                    <button class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                </div>

            </div>
        </div>
    </div>
}
